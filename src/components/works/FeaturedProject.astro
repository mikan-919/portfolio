---
interface Props {
    title: string;
    description: string;
    tags: string[];
    demoUrl?: string;
    repoUrl?: string;
    image?: string;
}

const {
    title,
    description,
    tags,
    demoUrl = "#",
    repoUrl = "#",
    image,
} = Astro.props;
---

<section class="full-width-border">
    <div class="content-container">
        <!-- ヘッダー帯 -->
        <div
            class="bg-black text-white px-4 py-2 flex justify-between items-center border-b-2 border-black md:border-b-2"
        >
            <h2 class="font-black tracking-widest text-sm">FEATURED PROJECT</h2>
            <span class="text-xs font-bold text-orange-400">★ HIGHLIGHT</span>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2">
            <!-- 左：画像エリア -->
            <div
                class="aspect-video lg:aspect-auto border-b-2 lg:border-b-0 lg:border-r-2 border-black bg-gray-100 relative group overflow-hidden"
            >
                {
                    image ? (
                        <img
                            src={image}
                            alt={title}
                            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-105 group-hover:blur-sm"
                        />
                    ) : (
                        <div class="absolute inset-0 opacity-20 bg-[radial-gradient(#000_1px,transparent_1px)] [background-size:16px_16px] transition-all duration-500 group-hover:scale-105 group-hover:blur-sm" />
                    )
                }

                <!-- ホバー時のアクション -->
                <div
                    class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-black/10 z-10"
                >
                    <a
                        href={demoUrl}
                        class="bg-white text-black border-2 border-black px-6 py-3 font-bold shadow-[4px_4px_0px_0px_#000] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[2px_2px_0px_0px_#000] transition-all"
                    >
                        View Live Demo ->
                    </a>
                </div>
            </div>

            <!-- 右：詳細エリア -->
            <div class="p-8 lg:p-12 flex flex-col justify-center">
                <div class="mb-6">
                    <h3
                        class="text-3xl md:text-4xl font-black mb-4 leading-tight"
                    >
                        {title}
                    </h3>
                    <p
                        class="font-medium text-sm md:text-base opacity-80 leading-relaxed"
                    >
                        {description}
                    </p>
                </div>

                <!-- Tech Stack -->
                <div class="mb-8">
                    <p
                        class="text-xs font-bold border-b-2 border-black inline-block mb-3"
                    >
                        TECH STACK
                    </p>
                    <ul
                        class="flex flex-wrap gap-2 font-mono text-xs font-bold"
                    >
                        {
                            tags.map((tag) => (
                                <li class="px-2 py-1 bg-gray-100 border border-black">
                                    {tag}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Links -->
                <div class="flex gap-4 mt-auto">
                    <a
                        href={demoUrl}
                        class="flex-1 text-center border-2 border-black bg-black text-white py-3 font-bold hover:bg-gray-800 transition shadow-[4px_4px_0px_0px_rgba(0,0,0,0.2)] hover:shadow-none hover:translate-y-[2px]"
                    >
                        Demo
                    </a>
                    <a
                        href={repoUrl}
                        class="flex-1 text-center border-2 border-black bg-white py-3 font-bold hover:bg-gray-50 transition shadow-[4px_4px_0px_0px_#000] hover:shadow-none hover:translate-y-[2px]"
                    >
                        GitHub
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
