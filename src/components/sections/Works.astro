---
import type { CollectionEntry } from "astro:content";
import WorkCard from "../WorkCard.astro";

interface Props {
    works: CollectionEntry<"works">[];
}

const { works }: Props = Astro.props;
---

<section id="works" class="full-width-border">
    <div class="content-container">
        <!-- セクションヘッダー -->
        <div class="flex justify-between items-center px-4 py-2 border-b-2">
            <h2 class="font-black text-sm tracking-[0.2em]">SELECTED WORKS</h2>
            <span class="opacity-60 font-mono font-bold text-xs">01 - 03</span>
        </div>

        <!-- グリッドレイアウト -->
        <div class="gap-0.5 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
            {works.map((work) => <WorkCard {...work.data} id={work.id} />)}
        </div>

        <!-- View All ボタンエリア -->
        <div class="bg-white p-4 md:p-0">
            <a
                href="/works"
                class="group group block relative bg-gray-50 py-6 border-2 border-black md:border-0 md:border-t-2 w-full text-center transition-colors duration-300"
            >
                <span
                    class="group inline-flex items-center gap-2 font-black text-sm tracking-widest"
                >
                    VIEW ALL WORKS
                    <span class="transition-transform group-hover:translate-x-1"
                        >-&gt;</span
                    >
                </span>
                <span
                    class="bg-white slide-bg-l duration-600 mix-blend-difference"
                ></span>
            </a>
        </div>
    </div>
</section>
