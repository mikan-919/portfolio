---



import type { CollectionEntry } from "astro:content";
import ChevronRight from "@lucide/astro/icons/chevron-right";
import Section from "@/components/ui/Section.astro";
import SlideButton from "@/components/ui/SlideButton.astro";
import WorkCard from "@/components/WorkCard.astro";

interface Props {
    works: CollectionEntry<"works">[];
}

const { works }: Props = Astro.props;
---

<Section id="works">
    <!-- セクションヘッダー -->
    <div
        class="bg-gray-100 flex justify-between items-center px-4 py-2 border-b-2"
    >
        <h2 class="font-black text-sm tracking-widest">LATEST WORKS</h2>
        <span class="opacity-60 font-mono font-bold text-xs">01 - 04</span>
    </div>

    <!-- グリッドレイアウト -->
    <div class="">
        {works.map((work) => <WorkCard {...work.data} id={work.id} />)}
    </div>

    <!-- View All ボタンエリア -->
    <div class="bg-white p-4 md:p-0">
        <SlideButton
            direction="left"
            href="/works"
            class="group group block relative py-6 border-2 border-black md:border-0 md:border-t-2 w-full text-center"
        >
            <span
                class="group inline-flex items-center gap-2 font-black text-sm tracking-widest"
            >
                VIEW ALL WORKS
                <ChevronRight
                    class="size-5 transition-transform group-hover:translate-x-1"
                />
            </span>
         
        </SlideButton>
    </div>
</Section>
